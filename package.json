{
  "name": "dpp-cattle",
  "version": "1.0.0",
  "description": "OpenAPI Backend Express server for providing cattle data in ICAR ADE format",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "watch-build": "tsc -w",
    "start": "node dist/src/index.js",
    "watch-start": "nodemon --delay 1 -w . -x 'npm run start'",
    "dev": "concurrently -k -p '[{name}]' -n 'typescript,api' -c 'yellow.bold,cyan.bold' npm:watch-build npm:watch-start",
    "lint": "tslint --format prose --project ."
  },
  "author": "Maarit Ryyn√§nen",
  "license": "",
  "dependencies": {
    "@readme/openapi-parser": "^2.7.0",
    "@types/express": "^5.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/mssql": "^9.1.7",
    "@types/swagger-ui-express": "^4.1.8",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "http-status-codes": "^2.3.0",
    "loglevel": "^1.9.2",
    "mssql": "^11.0.1",
    "nodemon": "^3.1.9",
    "openapi-backend": "^5.11.1",
    "openapi-types": "^12.1.3",
    "swagger-ui-express": "^5.0.1",
    "ts-postgres": "^2.0.4",
    "typescript": "^5.8.2"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "eslint": "^9.21.0"
  }
}
